# Root Environment Variables for Docker Compose
# Copy this file to .env and fill in your values

# Database Configuration (Neon PostgreSQL or Local PostgreSQL)
DATABASE_URL=postgresql://taskflow:your-password@db:5432/taskflow?sslmode=disable
POSTGRES_DB=taskflow
POSTGRES_USER=taskflow
POSTGRES_PASSWORD=your-secure-password-here

# Better Auth Secret (Must be the same for both services)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# Backend Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_SECURITY_HEADERS=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_URL=http://localhost:3000
NODE_ENV=production
